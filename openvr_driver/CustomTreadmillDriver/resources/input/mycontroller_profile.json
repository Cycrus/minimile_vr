{
	"jsonid": "input_profile",
	"controller_type": "treadmill",
	"legacy_binding" : "{CustomTreadmill}/input/legacy_bindings.json",
 	"device_class" : "TrackedDeviceClass_Controller",
	"input_bindingui_mode": "single_device",
	"input_bindingui_right" : {
      "image" : "{CustomTreadmill}/icons/treadmill_icon.svg"
   },
	"input_source": {
		"/input/trigger": {
			"binding_image_point": [ 0, 60 ],
			"type": "trigger",
			"click": false,
      		"touch": false
		},
		"/input/trackpad": {
			"binding_image_point": [ 80, 60 ],
			"type": "trackpad",
			"click": false,
      		"touch": false
		},
		"/input/joystick": {
			"binding_image_point": [ 250, 60 ],
			"type": "joystick",
			"force": false,
			"click": false,
      		"touch": false
		}
	}
}
